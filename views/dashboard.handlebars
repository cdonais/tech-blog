<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title"/>
        </div>
        <div>
            <label for="new-post">Post</label>
            <input type="text" name="new-post"/>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <ul>
       {{#each posts as |post|}} 
       <li>
                <article class="post card">
            <div>
                <h3 class="post-title  #004d40 teal darken-4 center-align">{{post.title}}</h2>
                <h4 class="username">by {{user.username}} on {{createdAt}}</h3>
                <p class="post-content">{{post.content}}</p>
                 <p>Comments:</p>
                
            </div>
            <div class="comments">
                {{#each comments as |comment|}}
                <section class="comment">
                   <div class="comment-info">
                   {{user.username}} said: {{comment_text}}
                   </div>
                </section>
                {{/each}}
            </div>
        </article>
       </li>
       {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>