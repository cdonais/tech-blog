<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post center-align">
            <div>
                <h2 class="post-title">{{post.title}}</h2>
                <h3 class="username">{{user.username}} on {{createdAt}}</h3>
                <p class="post-content">{{post.content}}</p>                
            </div>
            <div class="comments">
                {{#each this}}
                <section class="comment">
                   <div class="comment-info">
                   {{user.username}}  {{created_at}}
                   </div>
                   <div class="text">
                    {{comment_text}}
                   </div> 
                </section>
                {{/each}}
            </div>
        </article>
    </li>
    {{/each}}
</ul>